<h2><%= @meeting.name %></h2>
<table class="show_form">
  <thead>
      <tbody>
      <tr class="tb-items">
        <td class="table_items">Name: <%= @meeting.name %></td>
        <td class="table_items">Time: <%= @meeting.time %></td><br />
        <td class="table_items">Type of Player: <%= @meeting.type_player %></td>
      </tr>
    </tbody>
  </thead>
</table>
<table class="show_form">
  <thead>
    <% @meeting.students.each do |student| %>
      <tbody>
      <tr class="tb-items">
        <td class="table_items"> Name: <%= student.name %></td>
      </tr>
    </tbody>
    <% end %>
  </thead>
</table>
<div class="edit">
 <%= form_for([@meeting, @student]) do |f| %>
  <form action="/meetings" method="POST">
    <% if @student.errors[:name].present? %>
      <%= f.text_field :name, placeholder => "Cannot be Blank" %>
    <% else %>
      <%= f.text_field :name %>
    <% end %>
    <%= f.submit %>
 <% end %>
 <p><%= link_to "Edit this meeting", edit_meeting_path %></p>
 <%= link_to "Delete Meeting", meeting_path, :method => "delete", :class => "destroy" %>
 <p><%= link_to "Home", user_path %></p><br />
</div>
